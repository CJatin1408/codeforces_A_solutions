#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define  Max 5001
void solve()
{
 
  ll n;
  cin>>n;
  ll a[n];
  ll sum=0,i;
  for(i=0;i<n;i++)
  {
    cin>>a[i];
    sum+=a[i];
  }
  sum=(sum*2+n)/n;
  ll m=*max_element(a,a+n);
  cout<<max(sum,m)<<endl;
 
}
int main()
{
   ios_base::sync_with_stdio(false);
    cin.tie(NULL);
      solve(); 
}
